<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Programming Moris{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('/css/bootstrap.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('/css/style.css') }}" rel="stylesheet" />
            <link href="{{ asset('/css/override.css') }}" rel="stylesheet" />
            <link href='http://fonts.googleapis.com/css?family=Lustria' rel='stylesheet' type='text/css'>
        {% endblock %}
        {% block javascriptsinclude %}
            <script src="{{ asset('/js/jquery-2.0.3.min.js') }}"></script>
            <script src="{{ asset('/js/bootstrap.min.js') }}"></script>
        {% endblock %}        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block menu %}
        {% set cathegory_defined = false %}
        {% if cathegory is defined %}
            {% set cathegory_defined = true %}
        {% endif %}
        <nav class="navbar navbar-static" role="navigation">	
            <div class="container">

                <div class="navbar-header">
                    <span class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        Menu
                        <span class="glyphicon glyphicon-chevron-down"></span>
                    </span>
                </div>
                <div class="collapse navbar-collapse" id="collapse-menu">
                    <ul class="nav navbar-nav navbar-header pull-left">
                        <li class="dropdown {{ (cathegory_defined and cathegory == 'programming')?'active':'' }}">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Programming <small><i class="glyphicon glyphicon-chevron-down"></i></small></a>
                            <ul class="dropdown-menu">
                                <li {{ (cathegory_defined and cathegory == 'programming' and cathegoryname == 'Web')?'class="active"':'' }}><a href="{{ path('programming_moris_article_list_by_cathegory',{ 'cathegory': 'Web' }) }}">Web</a></li>
                                <li {{ (cathegory_defined and cathegory == 'programming' and cathegoryname == 'Java')?'class="active"':'' }}><a href="{{ path('programming_moris_article_list_by_cathegory',{ 'cathegory': 'Java' }) }}">Java</a></li>
                                <li {{ (cathegory_defined and cathegory == 'programming' and cathegoryname == 'Python')?'class="active"':'' }}><a href="{{ path('programming_moris_article_list_by_cathegory',{ 'cathegory': 'Python' }) }}">Python</a></li>
                                <li class="divider"></li>
                                <li><a href="#">My Projects</a></li>
                            </ul>
                        </li>
                        <li class="dropdown {{ (cathegory_defined and cathegory == 'other')?'active':'' }}">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Other stuff <small><i class="glyphicon glyphicon-chevron-down"></i></small></a>
                            <ul class="dropdown-menu">
                                <li {{ (cathegory_defined and cathegory == 'other' and cathegoryname == 'Short Stories')?'class="active"':'' }}><a href="#">Short stories</a></li>
                                <li {{ (cathegory_defined and cathegory == 'other' and cathegoryname == 'Movies')?'class="active"':'' }}><a href="#">Movies</a></li>
                                <li {{ (cathegory_defined and cathegory == 'other' and cathegoryname == 'Music')?'class="active"':'' }}><a href="{{ path('programming_moris_article_list_by_cathegory',{ 'cathegory': 'Music' }) }}">Music</a></li>
                                <li><a href="#">Photography</a></li>
                            </ul>
                        </li>
                        <li><a href="#">My Online CV</a></li>
                        <li><a href="#">Contacts</a></li>
                    </ul>
                    <form class="navbar-form navbar-header pull-right" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control pull-left" placeholder="Search">
                        </div>
                    </form>

                </div>				
            </div>
        </nav>
        {% endblock %}
        <header class="masthead">
            <div class="container">
                <div class="row">

                    <div class="col col-sm-6">
                        <a href="{{ path('programming_moris_home_homepage') }}">
                            <div class="well pull-left">
                                <img src="{{ asset('/css/images/logo.png') }}" alt="Programming Moris Logo">        
                            </div>
                        </a>
                    </div>

                    <div class="col col-sm-6">
                        <div class="socials pull-right">
                            <ul>
                                <li><a href="https://github.com/pauloAmaral" class="github">GitHub</a></li>
                                <li><a href="#" class="fb">Facebook</a></li>
                                <li class="last"><a href="#" class="twit">Twitter</a></li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
            {% block head %}
            {% endblock %}
        </header>    

        <div class="container">
            <div class="row">
                <div class="col col-sm-12">
                    <div class="panel article">
                        {% block content %}{% endblock %}
                    </div>
                </div>    
            </div>
        </div>    
        {% block javascripts %}{% endblock %}
    </body>
    <footer>
        <div class="container">
            {% block footer %}
            <div class="container">
                <div class="col-md-12">
                    <div class="col-md-1">
                        <a href="http://symfony.com/" ><img src="{{ asset('/css/images/symfony-logo.png') }}" class="img-responsive" alt="Responsive image"></a>
                    </div>
                    <div class="col-md-1">
                        <a href="http://getbootstrap.com/" ><img src="{{ asset('/css/images/bootstrap-logo.png') }}" class="img-responsive" alt="Responsive image"></a>
                    </div>
                    <p>Â© 2014 programmingmoris.com</p>
                </div>
            </div> 
            {% endblock %}
        </div>        
    </footer>
</html>
